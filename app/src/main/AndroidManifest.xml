<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="droidmentor.tabwithviewpager">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application

        android:allowBackup="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".mychat_offline"
        android:theme="@style/AppTheme">

       <service android:name=".FirebaseMessagingService">
           <intent-filter>
               <action android:name="com.google.firebase.MESSAGING.EVENT"/>
           </intent-filter>
       </service>

        <activity
            android:name=".Welcome"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartPage"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Login"
            android:parentActivityName=".StartPage"
            android:theme="@style/AppTheme2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="droidmentor.tabwithviewpager.StartPage" />
        </activity>
        <activity
            android:name=".Register"
            android:label="Register"
            android:parentActivityName=".StartPage"
            android:theme="@style/AppTheme2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="droidmentor.tabwithviewpager.StartPage" />
        </activity>
        <activity android:name=".ViewPager.TabWithIconActivity" />
        <activity
            android:name=".Settings"
            android:label="Settings"
            android:parentActivityName=".ViewPager.TabWithIconActivity"
           />
        <activity
            android:name=".About"
            android:label="About"
            android:parentActivityName=".ViewPager.TabWithIconActivity"
            />
        <activity
            android:name=".AllUserActivity"
            android:label="All User"
            android:parentActivityName=".ViewPager.TabWithIconActivity"
            />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity
            android:name=".Status"
            android:label="Status"
            android:parentActivityName=".Settings"
            />

        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".AllUserActivity"
            >
            <intent-filter><action android:name="droidmentor.tabwithviewpager_TARGET_NOTIFICATION"/>
            <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>